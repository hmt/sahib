.row
  .col-xs-12
    .tab-content
      ul.nav.nav-tabs role="tablist"
        li.active role="presentation"
          a aria-controls="schueler" data-toggle="tab" href="#schueler" role="tab"  SchÃ¼ler
        //li role="presentation"
          a aria-controls="check" data-toggle="tab" href="#check" role="tab"  Check
        li role="presentation"
          a aria-controls="debug" data-toggle="tab" href="#debug" role="tab" Datenbankfelder

      #schueler.tab-pane.active role="tabpanel"
        .row
          .col-xs-6
            .voffset-20
            table.table.table-condensed
              tr
                th Abschnitt
                -s.abschnitte.each do |a|
                  th.td-center class=('info' if a.jahr == jahr && a.abschnitt == abschnitt)
                    a.btn.btn-default.btn-xs href="/schueler/#{s.id}/#{a.jahr}/#{a.abschnitt}" #{a.schuljahr}, #{a.abschnitt}
              -s.noten_hash.each_pair do |k,v|
                tr
                  td #{k}
                  -v.each do |n|
                    td.td-center #{n}
              tr
                th Fehlstunden
                -s.abschnitte.each do |a|
                  td.td-center #{a.sum_fehl_std}
              tr
                th unentschudigt
                -s.abschnitte.each do |a|
                  td.td-center #{a.sum_fehl_std_u}
          .col-xs-2
            -if s.foto_vorhanden?
              img src="/images/schueler/#{s.id}.jpg"
          .col-xs-3
            address
              strong
                =>s.vorname
                =s.name
              br/
              =s.strasse
              br/
              =>s.plz
              =s.ort_abk
              br/
              br/
              =s.telefon
              br/
              =s.fax
              br/
              a href="mailto:#{s.e_mail}" =s.e_mail

      #check.tab-pane role="tabpanel"
      #debug.tab-pane role="tabpanel"
        .row
          .col-xs-4
            dl.dl-horizontal
              -s.columns.each do |c|
                dt =c.to_s
                dd =s[c].to_s
          .col-xs-4
            -s.abschnitte.each do |a|
              dl.dl-horizontal
                -a.columns.each do |c|
                  dt =c.to_s
                  dd =a[c].to_s
