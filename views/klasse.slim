-[klasse.aktive_schueler, klasse.inaktive_schueler].each_with_index do |k,ii|
  .row class=(ii == 0 ? "" : "hidden-print")
    .col-xs-12.col-md-10
      h3 #{ii == 0 ? "Aktive Sch√ºler" : "Inaktive Schueler"}
      table.table.table-condensed
        tr
          th
            th Vorname
          th Name
          th Adresse
          th Telefon
          th Geburtsdatum
          th Info
        -k.each_with_index do |s,i|
          tr.clickable-row data-url="/schueler/#{s.id}"
            td class=(s.volljaehrig_bei?(Time.now) ? "success" : "danger")
              =i+1
            td =s.vorname
            td =s.name
            td =s.adresse
            td =s.telefon
            td class=(s.volljaehrig_bei?(Time.now) ? "success" : "danger")
              =s.geburtsdatum.strftime("%d.%m.%Y")
              ==< s.monate_bis_18 ? "<small>(#{s.monate_bis_18}m)</small>" : ""
            td
              -if s.vermerke.any?
                span.label.label-warning data-toggle="tooltip" data-placement="left" title="#{s.vermerke.map{|v| v.bemerkung}.join('; ')}" =s.vermerke.count{|v| v.bemerkung}
