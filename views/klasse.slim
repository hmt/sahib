.row
  .col-md-12
    h1
      =k.klasse
      small  #{k.bildungsgang}
    small =k.klassenlehrer
.row
  .col-md-10
    h3 Aktive Schüler
    table.table.table-condensed
      tr
        th
          th Vorname
        th Name
        th Adresse
        th Telefon
        th Geburtsdatum
      -k.schueler_details(k.aktive_schueler).each_with_index do |s,i|
        tr.clickable-row data-url="/schueler/#{s[:id]}"
          td class=(s[:volljaehrig] ? "success" : "danger")
            =i+1
          td =s[:vorname]
          td =s[:name]
          td =s[:adresse]
          td =s[:telefon]
          td class=(s[:volljaehrig] ? "success" : "danger")
            =s[:geburtsdatum]

